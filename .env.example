APP_ENV=production
APP_DEBUG=false
APP_URL=https://example.com

APP_NAME="Libro de Reclamaciones"

# Key para cifrar secretos en BD (32 bytes en base64). Genera una y colócala solo en el servidor.
# Ejemplo: base64:... (no commitear claves reales)
APP_KEY=

DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=libro_reclamos
DB_USERNAME=libro_user
DB_PASSWORD=change-me

SESSION_NAME=LIBROSESSID
SESSION_SECURE=true

DEFAULT_TENANT_SLUG=platform
DEFAULT_LOCALE=es

# Multi-tenant: plataforma y subdominios
PLATFORM_BASE_DOMAIN=ldr.arca.digital
ALLOW_SUBDOMAIN_TENANTS=true

# Verificación de dominio custom (bloquea si no apunta al hosting)
DOMAIN_VERIFY_REQUIRED=true
# Opcional: IPs válidas del hosting (A record). Si se deja vacío, se usan las IPs A de PLATFORM_BASE_DOMAIN.
PLATFORM_ALLOWED_IPS=207.58.173.84

# Plesk auto-provision (Domain Alias) tras verificación DNS
PLESK_AUTO_PROVISION=true
PLESK_API_URL=https://cloud.portalsee.com:8443/enterprise/control/agent.php
PLESK_API_KEY=
PLESK_SITE_NAME=ldr.arca.digital
# true: verifica TLS del panel (recomendado en producción)
PLESK_VERIFY_TLS=true
# Secreto opcional para endpoint API de provisión
PLESK_JOB_SECRET=


UPLOADS_DIR=storage/uploads

# SMTP por defecto (fallback si un tenant no configura SMTP propio)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.office365.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_EMAIL=
MAIL_FROM_NAME="Libro de Reclamaciones"

# Permite el script CLI de prueba de email (no exponer vía web)
MAIL_TEST_ENABLED=false

